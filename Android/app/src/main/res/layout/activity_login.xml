<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login" android:background="@android:color/background_light">

    <Button
            android:text="@string/iniciarsesion"
            android:layout_width="133dp"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/button2" android:layout_marginBottom="155dp"
            android:textColor="@android:color/background_light" android:background="@android:color/holo_blue_light"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/imageView2" android:layout_marginTop="57dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:id="@+id/editText3"
            android:layout_marginTop="166dp" android:hint="@string/user"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText4" android:hint="@string/contra" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    <View
            android:id="@+id/divider"
            android:layout_width="344dp"
            android:layout_height="1dp"
            android:background="@android:color/background_dark"
            android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="133dp" android:layout_marginStart="24dp"
            android:backgroundTint="@android:color/black" android:foreground="@android:color/background_dark"/>
    <Button
            android:text="@string/unir"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/unirse2" android:layout_marginBottom="71dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/background_light" android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"/>
    <Button
            android:text="@string/unir"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/unirse" android:layout_marginBottom="71dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/background_light" android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"/>
    <Button
            android:text="@string/incognito"
            android:layout_width="116dp"
            android:layout_height="47dp" android:layout_alignBottom="@+id/unirse"
            android:layout_alignEnd="@+id/button2" android:id="@+id/incognito" android:layout_marginEnd="-80dp"
            android:layout_marginBottom="-1dp" android:textColor="@android:color/background_light"
            android:background="@android:color/holo_blue_light"/>
</android.widget.RelativeLayout>